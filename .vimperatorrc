" vim: set ft=vimperator:

"FollowHint キー指定
set hintchars=sadfjklewcmpgh

" shift+jkに矢印キー上下を割り当て
noremap J <Down>
noremap K <Up>

" jkに全ページスクロールを割り当て
noremap j <Space>
noremap k <S-Space>

" shift+hlにタブ移動を割り当て
noremap L <C-n>
noremap H <C-p>

" hlにページのバック/フォアードを割り当て
noremap h <C-o>
noremap l <C-i>

" ---------------
" [ or ] で次のページ, 前のページと書かれたリンクに遷移する
set nextpattern=\bnext\b,\bmore\b,next,^次(の)?ページ,次へ,\b次.*,→\b,^>$,^(>>|≫)$,^(>|≫),(>|≫)$
set previouspattern=\bprev|previous\b,prev,^前(の)?ページ,前へ,\b前.*,\b←,^<$,^(<<|≪)$,^(<|≪),(<|≪)
" ---------------


"補完先の指定
js services.services.autoCompleteSearch.class_="@mozilla.org/autocomplete/search;1?name=unifiedcomplete"

" 入力欄に自動フォーカスしない
set focuscontent
" qmarks
" 使用方法
" g o g で現在タブでgithubを開く
" g n g で新規タブでgithubを開く

qmark g https://github.com/iiyaman
qmark m https://mail.google.com/
qmark c https://calendar.google.com/calendar/
qmark n http://http://www.nicovideo.jp/ranking/fav/hourly/game
qmark t https://trello.com/
qmark y https://www.youtube.com/ 
qmark q http://qiita.com/ 
qmark w https://twitter.com/
qmark z https://zaim.net/home?spia_so=1


